<%- include('header') %>
<%- include('aside') %>

<div class="content-wrapper">
    <section class="content-header">
        <h1><i class="fa fa-th" aria-hidden="true"></i> Quản lý Sản phẩm</h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-body">
                <form action method="get" class="form-inline" role="form">
                    <div class="form-group">
                        <input class="form-control" name="name"
                            placeholder="Nhập Tên cần tìm......"
                            value="<%= searchName %>">
                    </div>
                    <button type="submit" class="btn btn-primary"><i
                            class="fa fa-search"></i></button>
                    <a href="/create-product"
                        class="btn btn-success pull-right"><i
                            class="fa fa-plus"></i> Thêm
                        mới</a>
                </form>
                <hr>
                <table class="table">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên Sản phẩm</th>
                            <th>Giá</th>
                            <th>Giá giảm</th>
                            <th>Trạng thái</th>
                            <th>Ảnh</th>
                            <th>Tên Danh mục</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% dbPro.forEach((pro, key)=> { %>
                        <tr>
                            <td scope="row">
                                <%= key + 1 %>
                            </td>
                            <td>
                                <%= pro.name %>
                            </td>
                            <td>
                                <%= pro.price %>
                            </td>
                            <td>
                                <%= pro.sale_price %>
                            </td>
                            <td>
                                <%= pro.status %>
                            </td>
                            <td>
                                <img src="images/<%= pro.image %>" alt
                                    width="50">
                            </td>
                            <td>
                                <%= pro.nameC %>
                            </td>
                            <td class="text-right">
                                <a href="/edit-product/<%= pro.id %>"
                                    class="btn btn-sm btn-primary"><i
                                        class="fa fa-edit"></i> Sửa</a>
                                <a href="/delete-product/<%= pro.id %>"
                                    class="btn btn-sm btn-danger"><i
                                        class="fa fa-trash"></i> Xóa</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <% if (currentPage> 1) { %>
                        <li class="page-item">
                            <a class="page-link"
                                href="/product?page=<%= currentPage - 1 %>&name=<%= searchName %>">
                                <i class="fa fa-chevron-left"></i>
                            </a>
                        </li>
                        <% } %>
                        <% for (let i=1; i <=totalPages; i++) { %>
                        <li
                            class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link"
                                href="/product?page=<%= i %>&name=<%= searchName %>">
                                <%= i %>
                            </a>
                        </li>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link"
                                href="/product?page=<%= currentPage + 1 %>&name=<%= searchName %>">
                                <i class="fa fa-chevron-right"></i>
                            </a>
                        </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    </section>
</div>

<%- include('footer') %>