            <div class="content-wrapper">
                <section class="content-header">
                    <h1><i class="fa fa-plus"></i> Form Sửa </h1>
                </section>
                <section class="content">
                    <div class="box">
                        <div class="row">
                            <div class="col-md-4">
                                <form action method="POST" role="form"
                                    enctype="multipart/form-data">
                                    <div class="box-body">
                                        <input type="hidden" name="password"
                                            value="<%= dbAcc.password %>">
                                        <div class="form-group">
                                            <label for>Tên người dùng</label>
                                            <input type="text"
                                                class="form-control"
                                                name="name"
                                                value="<%= dbAcc.name %>"
                                                readonly>
                                        </div>
                                        <div class="form-group">
                                            <label for>Số điện thoại</label>
                                            <input type="number"
                                                class="form-control"
                                                name="phone"
                                                value="<%= dbAcc.phone %>"
                                                readonly>
                                        </div>
                                        <div class="form-group">
                                            <label for>Địa chỉ</label>
                                            <input type="text"
                                                class="form-control"
                                                name="address"
                                                value="<%= dbAcc.address %>"
                                                readonly>
                                        </div>
                                        <div class="form-group">
                                            <label for>Mail</label>
                                            <input type="email"
                                                class="form-control"
                                                name="email"
                                                value="<%= dbAcc.email %>"
                                                readonly>
                                        </div>
                                        <div class="form-group">
                                            <label for>Loại tài khoản</label>
                                            <input type="text"
                                                class="form-control"
                                                name="role"
                                                value="<%= dbAcc.role %>"
                                                readonly>
                                        </div>
                                        <div class="form-group">
                                            <label for>Trạng thái tài
                                                khoản</label>
                                            <select name="status"
                                                class="form-control">
                                                <option value="Hoạt động"
                                                    <%=dbAcc.status
                                                    ===
                                                    "Hoạt động" ? 'selected'
                                                    : '' %>>Hoạt động</option>
                                                <option value="Bị khóa"
                                                    <%=dbAcc.status
                                                    ===
                                                    "Bị khóa" ? 'selected'
                                                    : '' %>>Bị khóa</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="box-footer">
                                        <button type="submit"
                                            class="btn btn-primary"><i
                                                class="fa fa-save"></i> Lưu
                                            lại</button>
                                        <a href="/account"
                                            class="btn btn-default pull-right"><i
                                                class="fa fa-arrow-left"></i>
                                            Quay lại</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
