<%- include('header') %>
<%- include('aside') %>

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            <i class="fa fa-th" aria-hidden="true"></i> Chi tiết Đơn hàng
            <a href="/order" class="btn btn-default pull-right">
                <i class="fa fa-arrow-left"></i> Quay lại
            </a>
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên Sản phẩm</th>
                            <th>Ảnh</th>
                            <th>Giá Sản phẩm</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% dbDetail.forEach((item, index) => { %>
                        <tr>
                            <td scope="row"><%= index + 1 %></td>
                            <td><%= item.nameP %></td>
                            <td>
                                <% if (item.image) { %>
                                <img src="/images/<%= item.image %>" width="50"
                                    alt="Product Image">
                                <% } else { %>
                                <img src="/images/placeholder.png" width="50"
                                    alt="No Image Available">
                                <% } %>
                            </td>
                            <td><%= item.sale_price %></td>
                            <td><%= item.quantity %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <hr>
            <div class="box-footer">
                <p><b>Mã đơn hàng:</b> <%= dbDetail[0].order_id %></p>
                <p><b>Tên người đặt:</b> <%= dbDetail[0].name %></p>
                <p><b>Số điện thoại:</b> <%= dbDetail[0].phone %></p>
                <p><b>Địa chỉ:</b> <%= dbDetail[0].address %></p>
                <p><b>Chú thích:</b> <%= dbDetail[0].note %></p>
                <p><b>Trạng thái đơn hàng:</b> <%= dbDetail[0].status %></p>
                <p><b>Ngày đặt đơn:</b> <span class="created-at"><%= dbDetail[0].created_at %></span></p>
                <p><b>Tổng giá đơn:</b> <%= dbDetail[0].total_price %></p>
            </div>
        </div>
    </section>
</div>

<%- include('footer') %>
